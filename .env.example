# AI Architect Demo Environment Configuration

# Application Settings
APP_NAME=AI Architect Demo
APP_VERSION=0.1.0
DEBUG=true
ENVIRONMENT=development

# API Settings
API_HOST=0.0.0.0
API_PORT=8000

# Database Settings (Docker internal hostnames)
POSTGRES_HOST=postgres
POSTGRES_PORT=5432
POSTGRES_USER=ai_demo
POSTGRES_PASSWORD=ai_demo_password
POSTGRES_DB=ai_demo

# Redis Settings
REDIS_HOST=redis
REDIS_PORT=6379

# MLflow Settings  
MLFLOW_TRACKING_URI=http://mlflow:5000
MLFLOW_EXPERIMENT_NAME=document_processing

# Ollama LLM Settings
OLLAMA_HOST=ollama
OLLAMA_PORT=11434
OLLAMA_MODEL=llama3.1:latest

# Kafka Settings
KAFKA_BOOTSTRAP_SERVERS=kafka:9092

# MinIO Settings
MINIO_ENDPOINT=minio:9000
MINIO_ACCESS_KEY=minioadmin
MINIO_SECRET_KEY=minioadmin
MINIO_BUCKET_NAME=ai-demo-documents

# Security (Change in production!)
SECRET_KEY=your-super-secret-key-change-in-production-please
ALGORITHM=HS256
ACCESS_TOKEN_EXPIRE_MINUTES=30

# Monitoring
PROMETHEUS_PORT=8001
ENABLE_METRICS=true
LOG_LEVEL=INFO

# File Processing
MAX_FILE_SIZE=52428800
UPLOAD_DIR=./uploads