# =============================================================================
# Terraform.tfvars Template for Azure
# Copy this file to terraform.tfvars and customize the values
# =============================================================================

# Project Configuration
project_name     = "ai-architect-demo"
environment      = "dev"
owner           = "ai-team"
azure_location  = "East US"

# Network Configuration
vnet_cidr = "10.0.0.0/16"

# Database Configuration
db_name                = "ai_demo"
db_username            = "postgres"
db_password            = "YourSecurePassword123!"  # Change this!
postgres_sku_name      = "B_Standard_B1ms"        # Use GP_Standard_D2s_v3 or larger for production
postgres_storage_mb    = 32768                    # 32 GB
postgres_storage_tier  = "P4"
postgres_ha_mode       = "Disabled"               # Use "ZoneRedundant" for production

# Redis Configuration
redis_capacity = 0                                 # Use 1 or larger for production
redis_family   = "C"                              # Use "P" for Premium tier
redis_sku_name = "Basic"                          # Use "Premium" for production

# Event Hub Configuration
eventhub_sku      = "Standard"                     # Standard supports Kafka
eventhub_capacity = 1                             # Throughput units

# Container Registry
acr_sku = "Standard"                              # Use "Premium" for production

# Storage Configuration
storage_replication_type = "LRS"                  # Use "GRS" for production

# Application Gateway Configuration
app_gateway_sku_name  = "Standard_v2"
app_gateway_sku_tier  = "Standard_v2"
app_gateway_capacity  = 2

# Container Resources
api_container_cpu           = 1                    # CPU cores
api_container_memory        = 2                    # Memory in GB
dashboard_container_cpu     = 0.5
dashboard_container_memory  = 1
mlflow_container_cpu        = 1
mlflow_container_memory     = 2

# Monitoring
alert_email = "your-email@example.com"            # Optional

# =============================================================================
# Production Recommendations
# =============================================================================

# For production environments, consider:
# - postgres_sku_name = "GP_Standard_D2s_v3" or larger
# - postgres_ha_mode = "ZoneRedundant" for high availability
# - redis_sku_name = "Premium" with larger capacity
# - acr_sku = "Premium" for geo-replication and content trust
# - storage_replication_type = "GRS" for geo-redundancy
# - app_gateway_sku_tier = "WAF_v2" for web application firewall
# - Increase container CPU and memory resources
# - Enable Azure Monitor and Application Insights